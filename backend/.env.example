# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/freightpower
DATABASE_URL_SYNC=postgresql://postgres:password@localhost:5432/freightpower

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Firebase
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@freightpower.ai

# FMCSA
FMCSA_BASE_URL=https://mobile.fmcsa.dot.gov/qc/services
FMCSA_WEB_KEY=your-fmcsa-web-key
FMCSA_API_KEY=your-fmcsa-api-key

# Groq AI
GROQ_API_KEY=your-groq-api-key
GROQ_TEXT_MODEL=llama-3.3-70b-versatile
GROQ_VISION_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# AWS S3 (Document Storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=freightpower-documents
AWS_REGION=us-east-1

# Application
APP_HOST=0.0.0.0
APP_PORT=5000
FRONTEND_URL=http://localhost:5173
DEBUG=true

